<duixml>
	<Element resid="PageMain" layoutpos="client" layout="borderlayout()" background="argb(0,0,0,0)">
		<Element id="atom(animator3)" class="animator" layoutpos="left"/>
		<Element layout="borderlayout()" class="page" padding="rect(-50rp,0,0,0)" layoutpos="left">
			<Element layout="flowlayout(0,2,2,0)" padding="rect(60rp,10rp,60rp,0)" layoutpos="left">
				<Element class="ISOImage" width="250rp" height="250rp"/>
			</Element>
			<Element layout="borderlayout()" layoutpos="left">
				<Richtext class="headertext" layoutpos="top" content="Select Disc Image"/>
				<Richtext class="instructiontext" layoutpos="top" content="Specify the path to your Windows 11 ISO file."/>
				<Element layout="verticalflowlayout()" padding="rect(3rp,15rp,0,0)" layoutpos="top">
					<Richtext id="atom(isopath)" class="instructiontext" content="No file selected."/>
					<TouchButton id="atom(browsebtn)" width="133rp" class="NormalButton" margin="rect(0,15rp,0,0)" content="Browse..."/>
				</Element>
			</Element>
		</Element>
	</Element>
</duixml>